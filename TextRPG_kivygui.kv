#:kivy 2.0.0

<SpinnerOption>:
    size_hint: None, None
    size: "180dp", "30dp"

<MainWindow>:
    orientation: "vertical"

    BoxLayout:
        orientation:"horizontal"
       
        Label:            
            text: root.text_textfield
            text_size: self.size
            halign: "left"
            valign: "top"
            font_size: "10sp"
            size_hint: .5, 1
            
        Label:       
            text: root.text_map
            text_size: self.size     
            halign: "left"
            valign: "top"
            size_hint: 1, 1
            font_name: "fonts/monospace.medium.ttf"
        
        BoxLayout:
            orientation:"vertical"
            size_hint: .5, 1
            
            Label:                      
                text: root.text_stats
                text_size: self.size
                halign: "left"
                valign: "top"
                size_hint: 1, .3
                font_size: "12sp"

    BoxLayout:
        orientation: "horizontal"
        size: "60dp","60dp"        
        size_hint: None,None

        Label:
            size: "60dp","60dp"        
            size_hint: None,None
        
        Button:
            text: "go\nnorth"
            size: "60dp","60dp"        
            size_hint: None,None
            on_press: root.go_north()
            disabled: not root.explore_buttons_active

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Spinner:
            id: spinner_items
            text: root.spinner_items_text
            size: "180dp","60dp"        
            size_hint: None,.5
            values: root.inventory_items
            on_text: root.spinner_items_clicked(spinner_items.text)
            disabled: False

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Spinner:
            id: spinner_spells
            text: root.spinner_spells_text
            size: "180dp","60dp"        
            size_hint: None,.5
            values: root.spells_items
            on_text: root.spinner_spells_clicked(spinner_spells.text)
            disabled: False

    BoxLayout:
        orientation: "horizontal"
        size: "180dp","60dp"
            #pos: "0dp","60dp"
        size_hint: None,None

        Button:
            text: "go\nwest"
            size: "60dp","60dp"
            #pos: "0dp","60dp"
            size_hint: None,None
            pos_hint: {"x":0}
            on_press: root.go_west()
            disabled: not root.explore_buttons_active
        Button:
            text: "go\nsouth"
            size: "60dp","60dp"
            size_hint: None,None
            on_press: root.go_south()
            disabled: not root.explore_buttons_active
        Button:
            text: "go\neast"
            size: "60dp","60dp"
            #pos: "0dp","60dp"
            size_hint: None,None
            on_press: root.go_east()
            disabled: not root.explore_buttons_active
        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Button:
            id: button_use_item
            text: "use\nitem"
            size: "60dp","60dp"        
            size_hint: None,None
            on_press: root.use_item()
            disabled: False

        Button:
            text: "equip\ngear"
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.explore_buttons_active
            on_press: root.equip()


        Button:
            text: "unequip\ngear"
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.explore_buttons_active
            on_press: root.unequip()

        Label:
            size: "60dp","60dp"        
            size_hint: None,None

        Button:
            text: "attack"
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.fight_buttons_active
            on_press: root.attack()
        Button:
            text: "defend"
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.fight_buttons_active
            on_press: root.defend()

        Button:
            text: 'cast\nspell'
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.fight_buttons_active
            on_press: root.cast_spell()
        Button:
            text: "run\naway"
            size: "60dp","60dp"        
            size_hint: None,None
            disabled: not root.fight_buttons_active
            on_press: root.run_away()

MainWindow: